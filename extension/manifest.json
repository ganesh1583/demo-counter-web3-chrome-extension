{
    "manifest_version": 3,
    "name": "Counter Extension",
    "version": "1.0",
    "description": "Chrome extension to increment a blockchain counter.",
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "host_permissions": ["<all_urls>"]
  }
  